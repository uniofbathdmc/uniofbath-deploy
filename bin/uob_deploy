#!/usr/bin/env ruby

require 'uob_deploy/helper'

if ARGV[0] == 'init'
  UobDeploy.init
elsif ARGV[0] == 'gen' || ARGV[0] == 'generate'
  UobDeploy.generate
else
  puts 'Usage:'
  puts 'init     -- create deploy.rb and deployment environment setup'
  puts 'generate -- create a new deployment environment file'
end
